<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Due date</th>
    <th>Is completed</th>
    <th>Assignee</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.due_date %></td>
    <td><%= task.is_completed %></td>
    <td><%= task.assignee_id %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

